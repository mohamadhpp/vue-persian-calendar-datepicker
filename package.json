{
    "name": "vue-persian-calendar-datepicker",
    "version": "1.2.4",
    "description": "A Vue 3 Persian calendar and datepicker with official Iranian holidays, Jalali, Hijri, and Gregorian date support.",
    "author": "Mohammad Hossein Pour",
    "license": "MIT",
    "homepage": "https://github.com/mohamadhpp/vue-persian-calendar-datepicker#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/mohamadhpp/vue-persian-calendar-datepicker.git"
    },
    "bugs": {
        "url": "https://github.com/mohamadhpp/vue-persian-calendar-datepicker/issues"
    },
    "keywords": [
        "vue",
        "vue3",
        "persian",
        "calendar",
        "datepicker",
        "jalali",
        "shamsi",
        "iran",
        "hijri",
        "date-picker"
    ],
    "type": "module",
    "main": "./dist/index.cjs",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "sideEffects": [
        "**/*.css"
    ],
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.cjs"
        },
        "./components": {
            "types": "./dist/components.d.ts",
            "import": "./dist/components.mjs",
            "require": "./dist/components.cjs"
        },
        "./composables": {
            "types": "./dist/composables.d.ts",
            "import": "./dist/composables.mjs",
            "require": "./dist/composables.cjs"
        }
    },
    "files": [
        "dist",
        "README.md"
    ],
    "scripts": {
        "build": "vite build",
        "dev": "vite build --watch"
    },
    "peerDependencies": {
        "vue": "^3.3.0"
    },
    "devDependencies": {
        "@types/node": "^24.9.1",
        "@vitejs/plugin-vue": "^6.0.1",
        "@vue/compiler-sfc": "^3.5.22",
        "typescript": "^5.9.3",
        "unbuild": "^3.6.1",
        "vite": "^7.1.12",
        "vite-plugin-css-injected-by-js": "^3.5.2",
        "vite-plugin-dts": "^4.5.4",
        "vue": "^3.3.0",
        "vue-tsc": "^3.1.1"
    }
}
