{
    "compilerOptions":
    {
        "target": "ESNext",
        "module": "ESNext",
        "types": ["node"],
        "baseUrl": ".",
        "moduleResolution": "Node",
        "declaration": true,
        "declarationDir": "dist/types",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowJs": true
    },
    "include": ["src", "vite.config.ts", "types"]
}
